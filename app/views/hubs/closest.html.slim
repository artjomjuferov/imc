h4 = link_to 'Go to the hubs search', hubs_path

h1 Find the closest hub

= form_for(form_for_object_from_param(:address), method: :get, url: hubs_closets_path) do |f|
  
  = f.autocomplete_field :name, hubs_autocomplete_address_path, size: 95
  = f.hidden_field :lat
  = f.hidden_field :long

  = submit_tag 'Find'

- if @hubs.empty?
  p No correct address is provided
- else
  = render 'hubs_table'
